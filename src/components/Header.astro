---
import { Image } from "astro:assets";
import HeaderLink from "./HeaderLink.astro";

import logoChronoOdyssey from "../assets/logo.png";
import kofiLogo from "../assets/ko-fi_logo.png";
---

<header>
  <nav class="bg-dark">
    <h2>
      <a href="/noticias" aria-label="Ir a la portada de Noticias Chrono Odyssey">
        <Image
          src={logoChronoOdyssey}
          alt="Logo Chrono Odyssey"
          width={48}
          height={48}
          format="png"
          loading="lazy"
          style="display:inline-block;vertical-align:middle;"
        />
      </a>
    </h2>
    <div class="internal-links">
      <HeaderLink href="/noticias">
        <span class="text-gold">Noticias</span>
      </HeaderLink>
      <HeaderLink href="https://www.chronoodyssey.com.br/map">
        <span class="text-gold">Mapa</span>
      </HeaderLink>
    </div>
    <div class="social-links">
      <a href="https://ko-fi.com/shacrom" target="_blank" class="kofi-button">
        <span class="sr-only">Ap√≥yanos en Ko-fi</span>
        <Image
          src={kofiLogo}
          alt="Ko-fi Logo"
          width={24}
          height={24}
          format="png"
          loading="lazy"
          style="display:inline-block;"
        />
        <span class="kofi-text">Ko-fi</span>
      </a>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  nav {
    padding: 0 1em;
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
    align-items: center;
  }
  
  .kofi-button {
    background: #ff5e5b;
    color: white !important;
    border-radius: 8px;
    padding: 8px 12px !important;
    text-decoration: none !important;
    transition: all 0.3s ease;
    border-bottom: none !important;
    display: flex;
    align-items: center;
    gap: 6px;
  }
  
  .kofi-button:hover {
    background: #e04e4b;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(255, 94, 91, 0.3);
  }
  
  .kofi-text {
    font-size: 14px;
    font-weight: 600;
  }
  
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
