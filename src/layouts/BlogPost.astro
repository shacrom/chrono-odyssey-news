---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import AdBanner from '../components/AdBanner.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;

// Configuración de Strapi para obtener artículos recientes
const STRAPI_URL = import.meta.env.STRAPI_URL || 'http://localhost:1337';
const token = Astro.cookies.get('strapi_jwt')?.value;

// Función para obtener noticias recientes
async function fetchRecentNoticias() {
  if (!token) {
    return [];
  }

  try {
    const response = await fetch(`${STRAPI_URL}/noticias`, {
      headers: {
        'Authorization': `Bearer ${token}`
      }
    });

    if (!response.ok) {
      return [];
    }

    const noticias = await response.json();
    // Ordenar por fecha de publicación (más recientes primero) y obtener las 8 más recientes
    return noticias
      .sort((a: any, b: any) => {
        const dateA = new Date(a.publishedAt || a.published_at);
        const dateB = new Date(b.publishedAt || b.published_at);
        return dateB.getTime() - dateA.getTime();
      })
      .slice(0, 8);
  } catch (error) {
    console.error('Error obteniendo noticias recientes:', error);
    return [];
  }
}

const recentNoticias = await fetchRecentNoticias();
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: 0 8px 32px rgba(191, 167, 106, 0.2);
			}
			.prose {
				width: 100%;
				max-width: 100%;
				margin: auto;
				padding: 1em;
				color: #e5e7eb; /* text-gray-200 equivalent */
				background: rgba(255, 255, 255, 0.05);
				backdrop-filter: blur(10px);
				border-radius: 16px;
				border: 1px solid rgba(255, 255, 255, 0.1);
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				color: #bfa76a; /* gold color */
			}
			.date {
				margin-bottom: 0.5em;
				color: #9ca3af; /* silver color */
			}
			.last-updated-on {
				font-style: italic;
				color: #9ca3af; /* silver color */
			}
			
			/* Estilos para el contenido HTML */
			.prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
				color: #bfa76a; /* gold color */
			}
			
			.prose p {
				color: #e5e7eb; /* text-gray-200 */
				line-height: 1.7;
			}
			
			.prose a {
				color: #bfa76a; /* gold color */
			}
			
			.prose a:hover {
				color: #d4c488; /* lighter gold */
			}
			
			.prose strong {
				color: #f3f4f6; /* text-gray-100 */
			}
			
			.prose code {
				background: rgba(124, 106, 74, 0.2); /* bronze with opacity */
				color: #f3f4f6;
				padding: 2px 4px;
				border-radius: 4px;
			}
			
			.prose blockquote {
				border-left: 4px solid #bfa76a; /* gold border */
				padding-left: 1rem;
				margin-left: 0;
				font-style: italic;
				color: #d1d5db; /* text-gray-300 */
			}
			
			/* Estilos para la sidebar */
			.line-clamp-2 {
				display: -webkit-box;
				-webkit-line-clamp: 2;
				-webkit-box-orient: vertical;
				overflow: hidden;
			}
			
			/* Estilos para listas anidadas de Strapi */
			.bb_ul {
				list-style-type: disc;
				margin-left: 1.5em;
				padding-left: 1em;
			}
			.bb_ul .bb_ul {
				list-style-type: circle;
				margin-left: 1.5em;
			}
			.bb_ul .bb_ul .bb_ul {
				list-style-type: square;
				margin-left: 1.5em;
			}
			.bb_ul li {
				margin-bottom: 0.3em;
			}
			
			/* Asegurar espacio suficiente para anuncios laterales */
			aside {
				min-width: 300px !important;
			}
			
			/* Responsive: ocultar sidebar en pantallas pequeñas */
			@media (max-width: 1023px) {
				main {
					justify-content: center !important;
					max-width: 4xl !important;
				}
				
				article {
					max-width: none !important;
				}
				
				.prose {
					max-width: 100% !important;
				}
			}
		</style>
	</head>

	<body class="bg-graydeep relative min-h-screen overflow-x-hidden">
		<!-- Efecto de fondo animado -->
		<div class="fixed inset-0 z-0 pointer-events-none">
			<!-- Gradiente principal -->
			<div class="absolute inset-0 bg-gradient-to-br from-graydeep via-graydeep to-bronze/10"></div>
			
			<!-- Elementos decorativos dorados flotantes -->
			<div class="absolute top-20 left-10 w-2 h-2 bg-gold/30 rounded-full animate-pulse"></div>
			<div class="absolute top-40 right-20 w-1 h-1 bg-silver/40 rounded-full animate-ping"></div>
			<div class="absolute top-60 left-1/4 w-3 h-3 bg-bronze/20 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
			<div class="absolute bottom-40 right-1/3 w-1.5 h-1.5 bg-gold/25 rounded-full animate-ping" style="animation-delay: 2s;"></div>
			<div class="absolute top-32 right-10 w-2.5 h-2.5 bg-silver/30 rounded-full animate-pulse" style="animation-delay: 3s;"></div>
			
			<!-- Rayos sutiles -->
			<div class="absolute top-0 left-1/4 w-px h-full bg-gradient-to-b from-transparent via-gold/10 to-transparent opacity-30"></div>
			<div class="absolute top-0 right-1/3 w-px h-full bg-gradient-to-b from-transparent via-bronze/10 to-transparent opacity-20" style="animation: fadeInOut 4s ease-in-out infinite;"></div>
			
			<!-- Círculo decorativo grande -->
			<div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-radial from-gold/5 to-transparent rounded-full blur-xl"></div>
			<div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-radial from-bronze/3 to-transparent rounded-full blur-2xl"></div>
		</div>
		
		<!-- Contenido principal con z-index superior -->
		<div class="relative z-10">
			<Header />
			
			<!-- Banner publicitario horizontal después del header -->
			<div class="w-full max-w-6xl mx-auto px-4 py-4">
				<AdBanner type="horizontal" className="horizontal" />
			</div>
			
			<main class="flex justify-center max-w-none mx-auto px-4 gap-6">
				<!-- Artículo principal -->
				<article class="w-full max-w-4xl relative">
					<div class="hero-image">
						{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
					</div>
					<div class="prose">
						<!-- Enlace volver a noticias dentro del artículo -->
						<div class="absolute top-4 left-4 z-10">
							<a 
								href="/noticias" 
								class="inline-flex items-center text-silver/70 hover:text-gold transition-colors text-sm bg-black/30 backdrop-blur-sm px-3 py-2 rounded-lg border border-white/10 hover:border-gold/30"
							>
								<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
								</svg>
								VOLVER A NOTICIAS
							</a>
						</div>
						
						<div class="title">
							<div class="date">
								<FormattedDate date={pubDate} />
								{
									updatedDate && (
										<div class="last-updated-on">
											Last updated on <FormattedDate date={updatedDate} />
										</div>
									)
								}
							</div>
							<h1>{title}</h1>
							<hr />
						</div>
						<slot />
						
						<!-- Banner cuadrado al final del artículo -->
						<div class="mt-8 text-center">
							<AdBanner type="square" className="square inline-block" />
						</div>
					</div>
				</article>

				<!-- Sidebar de artículos recientes -->
				<aside class="w-80 flex-shrink-0 hidden lg:block">
					<div class="sticky top-4">
						<div class="bg-black/20 backdrop-blur-md rounded-xl border border-white/10 p-6">
							<h2 class="text-gold text-xl font-bold mb-6 text-center uppercase tracking-wide">
								Artículos Recientes
							</h2>
							<div class="space-y-4">
								{recentNoticias.map((noticia: any) => (
									<a 
										href={`/noticias/${noticia.slug || noticia.id}/`}
										class="block p-3 rounded-lg hover:bg-white/5 transition-colors border border-white/5 hover:border-gold/30"
									>
										<div class="flex gap-3">
											{noticia.cover_image && (
												<div class="w-16 h-12 flex-shrink-0">
													<img 
														src={noticia.cover_image} 
														alt=""
														class="w-full h-full object-cover rounded"
													/>
												</div>
											)}
											<div class="flex-1 min-w-0">
												<div class="text-xs text-silver/70 uppercase tracking-wide mb-1">
													<FormattedDate date={new Date(noticia.publishedAt || noticia.published_at)} />
												</div>
												<h3 class="text-white text-sm font-medium leading-tight line-clamp-2">
													{noticia.title}
												</h3>
											</div>
										</div>
									</a>
								))}
							</div>
						</div>
						
						<!-- Banner publicitario cuadrado en la sidebar -->
						<div class="mt-6">
							<AdBanner type="square" className="square" />
						</div>
					</div>
				</aside>
			</main>
			<Footer />
		</div>
		
		<!-- Animaciones CSS personalizadas -->
		<style>
			@keyframes fadeInOut {
				0%, 100% { opacity: 0.2; }
				50% { opacity: 0.6; }
			}
			
			@keyframes float {
				0%, 100% { transform: translateY(0px); }
				50% { transform: translateY(-10px); }
			}
			
			/* Gradiente radial personalizado */
			.bg-gradient-radial {
				background: radial-gradient(circle, var(--tw-gradient-from), var(--tw-gradient-to));
			}
		</style>
	</body>
</html>
